{% extends 'base.html.twig' %}

{% block title %}Hello MasterController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    <form action="{{ path('message') }}" method="post">
        <!-- put the name of the path in action in method post -->

        <label for="message">Message:</label>
        <br><br>
        <textarea name="message" ></textarea>
        <br><br>
        <label for="display">Message display :</label>

        <select name="display" >
            <option value="weird">Weird cases</option>
            <option value="dashes">Spaces to dashes</option>
        </select>

        <br><br>

        <input type="submit" value="Submit">

    </form>
<p>
    {{ message }}
</p>
{% endblock %}
